		<aspose.email.version>20.11</aspose.email.version>
		<aspose.email.classifier>jdk16</aspose.email.classifier>

		<aspose.imaging.version>20.11</aspose.imaging.version>
		<aspose.imaging.classifier>jdk16</aspose.imaging.classifier>

		<!-- This is not used at the moment but we try to keep it up-to-date
        <aspose.note.version>20.9</aspose.note.version>
        <aspose.note.classifier>jdk17</aspose.note.classifier>
        -->

		<aspose.ocr.version>17.11</aspose.ocr.version>

		<!-- Kept back to 20.9 for regression in Tiff conversion in 20.10 -->
		<aspose.pdf.version>20.11</aspose.pdf.version>
		<aspose.pdf.classifier>jdk17</aspose.pdf.classifier>

		<aspose.slides.version>20.10</aspose.slides.version>
		<aspose.slides.classifier>jdk16</aspose.slides.classifier>

		<aspose.tasks.version>20.11</aspose.tasks.version>
		<aspose.tasks.classifier>jdk18</aspose.tasks.classifier>

		<aspose.words.version>20.10</aspose.words.version>
		<aspose.words.classifier>jdk17</aspose.words.classifier>

		<aspose.html.version>20.9.1</aspose.html.version>
		<aspose.html.classifier>jdk16</aspose.html.classifier>
	</properties>


	<distributionManagement>
		<repository>
			<id>releases</id>
			<url>https://mvn.docshifter.com/repository/releases/</url>
		</repository>
		<snapshotRepository>
			<id>snapshots</id>
			<url>https://mvn.docshifter.com/repository/snapshots/</url>
		</snapshotRepository>
	</distributionManagement>

	<repositories>
		<repository>
			<id>internal</id>
			<name>Archiva Managed Internal Repository</name>
			<url>https://mvn.docshifter.com/repository/releases/</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
	</repositories>

	<pluginRepositories>
		<pluginRepository>
			<id>internal</id>
			<name>Archiva Managed Internal Repository</name>
			<url>https://mvn.docshifter.com/repository/plugins/</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</pluginRepository>
	</pluginRepositories>

