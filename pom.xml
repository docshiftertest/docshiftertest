    <distributionManagement>
        <repository>
            <id>releases</id>
            <url>https://mvn.docbyte.com/artifactory/releases</url>
        </repository>
        <snapshotRepository>
            <id>snapshots</id>
            <url>https://mvn.docbyte.com/artifactory/snapshots</url>
        </snapshotRepository>
    </distributionManagement>

    <repositories>
        <repository>
            <id>internal</id>
            <name>Archiva Managed Internal Repository</name>
            <url>https://mvn.docbyte.com/artifactory/releases/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>

    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>internal</id>
            <name>Archiva Managed Internal Repository</name>
            <url>https://mvn.docbyte.com/artifactory/plugins/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </pluginRepository>
    </pluginRepositories>
