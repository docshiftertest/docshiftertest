<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
        
<hibernate-mapping>
    <class name="com.docbyte.docshifter.model.vo.ReceiverConfiguration" table="RECEIVERCONFIGURATION">
        <id name="id" column="ID">
            <generator class="native"/>
        </id>
        <property name="name"/>
        <property name="description"/>
        
        <many-to-one name="transformationConfiguration" column="TRANSFORMATIONMODULECONFIGURATIONID" foreign-key="TRANSFORMATIONMODULECONFIGURATIONID" lazy="false"/>
        
        <set name="releaseConfiguration" table="ReceiverReleaseModuleConfigurations" lazy="false" cascade="save-update">
        	<key column="RECEIVERCONFIGURATIONID" not-null="true"/>
        	<many-to-many column="RELEASEMODULECONFIGURATIONID" class="com.docbyte.docshifter.model.vo.ModuleConfiguration"/>
        </set>
    </class>
</hibernate-mapping>