<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.docbyte.docshifter.model.vo.Node" table="NODE">
		<id name="id" column="ID">
			<generator class="native" />
		</id>

		<many-to-one name="parentNode" column="PARENTNODE" lazy="false" cascade="save-update"/>
		<many-to-one name="moduleConfiguration" column="MODULECONFIGURATION" class="com.docbyte.docshifter.model.vo.ModuleConfiguration" lazy="false" cascade="all"/>

      	<set name="childNodes" table="NODE" inverse="true" cascade="all-delete-orphan" lazy="false">
        	<key column="PARENTNODE"/>
        	<one-to-many class="com.docbyte.docshifter.model.vo.Node"/>
        </set>
        
	</class>
</hibernate-mapping>