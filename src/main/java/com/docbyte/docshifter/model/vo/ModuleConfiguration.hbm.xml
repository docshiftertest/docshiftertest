<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.docbyte.docshifter.model.vo.ModuleConfiguration"
		table="MODULECONFIGURATIONS">
		<id name="id" column="ID" unsaved-value="0">
			<generator class="native" />
		</id>

		<property name="name" />
		<property name="description" />

		<many-to-one name="module" column="MODULEID" foreign-key="MODULEID"
			lazy="false" cascade="save-update" />

		<map name="parameterValues" table="MODULEPARAMSVALUES" cascade="delete-orphan" lazy="false">
			<key column="CONFIGURATIONID" />
			<index-many-to-many column="PARAMID" foreign-key="PARAMID"
				class="com.docbyte.docshifter.model.vo.Parameter" />
			<element column="PARAMVALUE" type="string" />
		</map>
	</class>
</hibernate-mapping>